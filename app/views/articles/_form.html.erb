		<div id="error_explanations">
			<h2>
				<%= pluralize(@article.errors.count "error") %> prohibitate this article from being saved: 
			</h2>
		
		<ul>
			<% @article.errors.full_message.each do |err| %>
			<li>
				<%= err %>
			</li>
			<% end %>
		</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :title %><br>
